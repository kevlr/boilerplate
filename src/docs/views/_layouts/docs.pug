doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    title Documentation - kevlr
    meta(name="description" content="")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" href="/css/app.min.css")
    link(href="https://fonts.googleapis.com/css?family=Lato:400,900" rel="stylesheet")
    link(rel="stylesheet" href="/css/docs.min.css")

  body
    include ../_includes/mixins.pug
    .u-hidden
      include ../../../../app/images/icons.svg
    
    .d-layout
      nav.d-sidebar
        a.d-sidebar__title(href="/") kevlr <span>docs</span>
        ul.d-sidebar__list
          each component in components
            - const slug = component.split('.pug')[0];
            li.d-sidebar__item
              a.d-sidebar__link(href=`/components/${slug}.html`)= slug
              
      main.d-layout__main
        block content
        .d-layout__footer
    
    script(src="https://cdn.polyfill.io/v2/polyfill.min.js")
    script(src="/js/app.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/languages/xml.min.js")
    script.
      var codes = document.querySelectorAll('code')
      for ( var i = 0; i < codes.length; ++i) {
        codes[i].textContent = codes[i].innerHTML
      }
      hljs.initHighlightingOnLoad()
